@model DapperRepo.Web.Models.Customers.CustomerModel

<form id="edit-customer-form">
    <input type="hidden" value="@Model.Id" id="Id" name="Id" />
    <div class="form-group">
        <label class="col-md-3">Username</label>
        <div class="col-md-9">
            <input id="Username" name="Username" class="form-control" type="text" value="@Model.Username">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3">Email</label>
        <div class="col-md-9">
            <input id="Email" name="Email" class="form-control" type="text" value="@Model.Email">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3">Active</label>
        <div class="col-md-9">
            <input id="Active" name="Active" type="checkbox" @(Model.Active ? "checked=checked" : "")>
        </div>
    </div>
</form>

